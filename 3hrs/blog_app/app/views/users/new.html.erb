<h1>Sign Up for a new Account</h1>
	<%= form_for @user do |f| %>
		<div>
			<%= f.email_field :email, placeholder: "Email Address" %>
		</div>
		<div>
			<%= f.text_field :first_name, placeholder: "First Name" %>
		</div>
		<div>
			<%= f.text_field :last_name, placeholder: "Last Name" %>
		</div>	
		<div>
			<%= f.password_field :password_digest, placeholder: "New Password" %>
		</div>
		<div>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%><%= f.submit %>
		</div>


<% end %>